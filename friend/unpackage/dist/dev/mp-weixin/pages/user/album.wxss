	top: -50rpx;
	left:350rpx;
	background: -webkit-gradient(linear, left top, left bottom, from(#fd6e99), to(#ffffff));
	background: -o-linear-gradient(top, #fd6e99, #ffffff);
	background: linear-gradient(to bottom, #fd6e99, #ffffff); 
